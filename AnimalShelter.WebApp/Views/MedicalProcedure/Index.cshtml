@model IEnumerable<AnimalShelter.WebApp.Models.MedicalProcedureVM>

@{
    ViewData["Title"] = "Medical Procedures";
}

<div class="container" style="display: flex">
    <h1 style="width: 50%">Medical procedures</h1>
    <p style="width: 50%" align="right">
        <button type="button" onclick="location.href='@Url.Action("Create", "MedicalProcedure")'" style="padding: 10px; background-color: forestgreen; color: white; border: 0px; border-radius: 5px">Register new medical procedure</button>
    </p>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Doctor's ID
            </th>
            <th>
                Animal's ID
            </th>
            <th>
                Procedure Name
            </th>
            <th>
                Was Successful
            </th>
            <th>
                Date
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnimalId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProcedureName)
            </td>
            <td>
                @(item.WasSuccess? "YES" : "NO")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
