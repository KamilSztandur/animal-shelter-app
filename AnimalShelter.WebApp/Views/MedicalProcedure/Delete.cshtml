@model AnimalShelter.WebApp.Models.MedicalProcedureVM

@{
    ViewData["Title"] = "Delete medical procedure record";
}

<h2>Are you sure you want to delete this medical procedure record?</h2>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ID:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Doctor's ID:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DoctorId)
        </dd>
        <dt class = "col-sm-2">
            Animal's ID:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnimalId)
        </dd>
        <dt class = "col-sm-2">
            Procedure Name:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProcedureName)
        </dd>
        <dt class = "col-sm-2">
            Was Successful:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WasSuccess)
        </dd>
        <dt class = "col-sm-2">
            Date:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
