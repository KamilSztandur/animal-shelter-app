@model AnimalShelter.WebApp.Models.AnimalVM

@{
    ViewData["Title"] = "Delete animal";
}
<h2>Are you sure you want to delete this animal from database?</h2>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ID:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Shelter box ID:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BoxId)
        </dd>
        <dt class = "col-sm-2">
            Main doctor ID:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MainDoctorId)
        </dd>
        <dt class = "col-sm-2">
            Name:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Ready for adoption:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsReadyForAdoption)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
